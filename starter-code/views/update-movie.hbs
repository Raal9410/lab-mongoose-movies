<div class="container">
<form action="/update-movie?moviesid={{_id}}" method="post">
  <div class="form-group">
  <label for="title">Title</label>
  <input value="{{title}}"class="form-control" type="text" name="title" id="title">
  </div>
  <div class="form-group">
  <label for="genre">Genre</label>
  <input value="{{genre}}" class="form-control" type="text" name="genre" id="genre">
  </div>
  <div class="form-group">
  <label for="plot">Plot</label>
  <input value="{{plot}}" class="form-control" type="text" name="plot" id="plot">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
</div>